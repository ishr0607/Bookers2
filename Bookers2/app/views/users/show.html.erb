<div class="profile-container">
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>

    <h3 class="profile-name">name<%= @user.name %></h3>
    <h3>introductio<%= @user.introduction %></h3>
    <% if @user.id == current_user.id %>
    	<p><%= link_to "Edit", edit_user_path(@user) %></p>
    <% end %>
</div>

<h2>Books</h2>

<% @books.each do |book| %>
	<table>
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td></td>
				<td><%= link_to book_path(book.id) do %>
					<%= book.title %><% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
		</tbody>
	</table>

<% end %>