<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= @user.introdaction %>
</div>

<h2>Books</h2>

<% @books.each do |book| %>
	<table>
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td></td>
				<td><%= link_to book_path(book.id) do %>
					<%= book.title %><% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
		</tbody>
	</table>

<% end %>