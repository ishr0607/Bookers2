<%= render 'users/userinfo', user: @user %>
<%= render 'books/new', book: @book %>

<h2>Users</h2>

	<table>
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<% @users.each do |user| %>
				<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%></td>
				<td><%= user.name %></td>
				<td><%= link_to "show", user_path(user.id) %></td>
				<% end %>
			</tr>
		</tbody>
	</table>

